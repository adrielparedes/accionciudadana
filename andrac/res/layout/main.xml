<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	android:scrollbarAlwaysDrawVerticalTrack="true" android:background="@color/color_fondo">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_marginLeft="20dip"
		android:layout_marginRight="5dip" android:background="@color/color_fondo">
		<TextView android:gravity="center_horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="@string/hello" />
		<Button android:id="@+id/boton_reclamo" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:enabled="true" android:textAppearance="@android:style/TextAppearance.Large"
			android:text="Iniciar Reclamo" android:onClick="iniciarReclamo" />
		<Button android:id="@+id/boton_historial" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:enabled="true" android:textAppearance="@android:style/TextAppearance.Large"
			android:text="Reclamos Realizados" android:onClick="mostrarReclamos" />
		<Button android:id="@+id/boton_perfil" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:enabled="true" android:textAppearance="@android:style/TextAppearance.Large"
			android:text="Perfil Usuario" android:onClick="mostrarPerfil" />
	</LinearLayout>
</ScrollView>

